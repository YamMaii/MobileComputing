<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.priam.mobilecomputingactivities.MainActivity"
    android:background="@drawable/bgyam">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emailAdress_text"
        android:hint="@string/enter_email_address"
        android:textColorHint="@color/abc_background_cache_hint_selector_material_light"
        android:textAlignment="center"
        android:textColor="@color/abc_background_cache_hint_selector_material_light"
        android:layout_above="@+id/password_text"
        android:inputType="text"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/password_text"
        android:hint="@string/enter_password"
        android:textColorHint="@color/abc_background_cache_hint_selector_material_light"
        android:textAlignment="center"
        android:inputType="textPassword"
        android:textColor="@color/abc_background_cache_hint_selector_material_light"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:id="@+id/loginBtn"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/password_text"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:shadowColor="#000000"
        android:background="@color/button_material_dark"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show"
        android:id="@+id/showBtn"
        android:textColor="@color/abc_background_cache_hint_selector_material_light"
        android:textStyle="bold"
        android:layout_below="@+id/password_text"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/registerBtn"
        android:layout_marginTop="72dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/loginBtn"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
